<%# Let's Connect %>
<div id="connect" class="pt-8"></div>
<div class="relative">
  <div class="relative flex flex-col md:flex-row text-white pb-4 z-20">
    <div class="md:w-1/2 flex justify-center my-3 md:my-16">
      <div class="md:w-80">
        <p class="text-4xl sm:text-7xl font-bold mt-2 mb-6">Let's Connect</p>
        <div class="flex">
          <%= inline_svg_tag "mail.svg", class:'w-5 h-6 stroke-current fill-current text-white' %>
          <p class="ml-4 mt-1">pentridgestation@gmail.com</p>
        </div>
        <div class="flex mt-4">
          <%= inline_svg_tag "phone.svg", class:'w-5 h-6 stroke-current fill-current text-white' %>
          <p class="ml-4 mt-1">(267) 225 7790</p>
        </div>
      </div>
    </div>
    <div class="md:w-1/2 flex justify-center md:justify-start">
      <div class="bg-teal-backup w-5/6 mb-6 md:mt-16  px-6 py-4">
        <%= render 'messages/form' %>
      </div>
    </div>
  </div>
  <div class="absolute left-0 top-0 w-full w z-10 ">
    <div class="md:h-96 flex flex-col md:flex-row">
      <div class="h-96 w-full md:w-1/2 md:h-full grid grid-cols-12 grid-rows-12 bg-gradient-to-r from-teal-backup to-teal-readable" >
        <div class="col-span-12 row-span-3"></div>
        <div class="col-span-12 row-span-6 bg-teal-readable transform -skew-y-12 z-10"></div>
        <div class="col-span-12 row-span-3 "></div>
      </div>
      <div class=" h-20 sm:h-24 md:w-1/2 md:h-96 bg-gradient-to-r from-teal-backup to-teal-readable md:bg-none md:bg-teal-readable"></div>
    </div>
  </div>
</div>
