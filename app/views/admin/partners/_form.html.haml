= form.select :category, options_for_select(Partner.categories, (!@partner.category.nil? && @partner.category == "musician") ? 1 : 0)
= form.text_field :name
= form.text_field :tagline
= form.text_field :bio
= form.text_field :low_price
= form.text_field :high_price
= form.text_field :facebook
= form.text_field :instagram
= form.text_field :twitter
= form.text_field :website
= form.file_field :photo

= form.form_actions do
  = form.submit class: "btn btn-primary"
  = link_to 'Cancel', admin_partners_path, class: "btn btn-link"
