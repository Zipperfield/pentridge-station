= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :start
    = f.time_select :start
  .field
    = f.label :additional_time
    = f.number_field :additional_time
  .field
    = f.label :event_type
    = f.number_field :event_type
  .field
    = f.label :contact
    = f.text_field :contact
  .actions
    = f.submit 'Save'
