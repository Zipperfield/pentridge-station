<div class="w-4/5">
  <div class="font-bold text-xl mb-3">Date & Time</div>
  <div><%= date_field_tag "temp_event_date", Date.today, class: 'form-input mb-1', min: Date.today%></div>
  <div class="flex my-1">
    <div><%= select_tag "temp_event_start_time", options_for_select(@event.hourly_choices(1,23), Tod::TimeOfDay.new(14)), {class: 'form-input mr-4' }%></div>
    <div><%= select_tag "temp_event_end_time", options_for_select(@event.hourly_choices(1,23), Tod::TimeOfDay.new(22)), {class: 'form-input  ml-4' }%>
    </div>
  </div>
  <div class="font-bold text-xl mt-5 mb-3">Atendees</div>
  <div><%= select_tag "temp_event_num_attendees", options_for_select(Event.num_attendees), {class: 'form-input' }%>
  </div>
  <div class="font-bold text-xl mt-5 mb-3">Type of Event</div>
  <div><%= select_tag "temp_event_event_type", options_for_select(Event.event_types), {class: 'form-input' }%>
  </div>
  <button id="temp_submit" class="bg-blue-400 w-full py-2 text-xs text-white mt-5">START BOOKING
  </button>
</div>
